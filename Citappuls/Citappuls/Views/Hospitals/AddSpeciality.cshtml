@model Citappuls.Models.AddHospitalSpecialitiesViewModel

@{
    ViewData["Title"] = "Create";
}
<div class="container mt-5">
    <h1>Crear</h1>

    <h4>Especialidad / Hospitals</h4>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="AddSpeciality" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="HospitalId" />
                <input type="hidden" asp-for="Specialities" />
                <div class="form-group">
                    <label asp-for="SpecialityId" class="control-label"></label>
                    <select asp-for="SpecialityId" asp-items="Model.Specialities" class="form-control"></select>
                    <span asp-validation-for="SpecialityId" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Crear" class="btn btn-outline-primary" />
                    <a asp-action="Details" asp-route-id="@Model.HospitalId" class="btn btn-outline-success">Regresar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
